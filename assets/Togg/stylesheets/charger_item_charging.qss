#chargerItemWidget {
    background-image: url(:/assets/Togg/images/<charger_code>_interface_background_active.png);
    background-repeat : no-repeat;
    background-position : center;
}

#chargerItemHoverWidget {
    background-image: url(:/assets/Togg/images/<charger_code>_interface_background_selected.png);
    background-repeat : no-repeat;
    background-position : center;
}

#plugIcon {
    background-image: url(:/assets/Togg/images/<charger_code>_plug.png);
    background-repeat : no-repeat;
    background-position : center;
}

#socketIcon {
    background-image: url(:/assets/Togg/images/<project_type>_<charger_code>_socket.png);
    background-repeat : no-repeat;
    background-position : center;
}

#connectorId, #connectorPower, #connectorType {
    font-family: "Muli";
    font-style: bold;
    text-align: center;
    qproperty-alignment: AlignCenter;
    color: white;
}

#connectorId {
    font-family: "Muli";
    font-size: 72px;
}

#connectorPower, #connectorType {
    font-family: "Muli";
    font-size: 32px;
}

#energyLabel, #powerLabel {
    color : #58595b;
    font-family: 'Muli SemiBold';
    font-size : 18px;
}

#progressLabel {
    qproperty-alignment: AlignCenter;
    text-align: center;
    color : #58595b;
    font-family: "Muli";
    font-style: bold;
    font-size: 28px;
}

#reservationOrFaultedGrayBackgroundWidget {
    background-color : rgba(0, 0, 0, 0.3);
    border-radius : 10%;
}

#chargerItemNotificationIconAndLabelWidget {
    background-image: url(:/assets/Togg/images/<charger_code>_reservation_or_faulted_background.png);
    background-repeat : no-repeat;
    background-position : center;
}

#chargerItemNotificationIconWidget {
    background-image: url(:/assets/Togg/images/reserved.png);
    background-repeat : no-repeat;
    background-position : center;
}

#reservationOrFaultedLabel {
    font-family: "Muli";
    font-weight: bold;
    font-size: 20px;
    color: #58595b;
    text-align: center;
    qproperty-alignment: AlignCenter;
}
